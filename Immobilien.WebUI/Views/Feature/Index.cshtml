@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Öne Cikanlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Resim Url</th>
        <th>Baslik</th>
        <th>Alt Baslik</th>
        <th>m2</th>
        <th>Kontrat Türü</th>
        <th>Güvenlik</th>
        <th>Islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.ImageUrl</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Square</td>
            <td>@item.Contract</td>
            <td>@item.Safety</td>
            <td>
                @* <a asp-controller="Deal" asp-action="DeleteDeal" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a> *@
                <button onclick="DeleteRecord('/Feature/DeleteFeature/@item.Id')" class="btn btn-outline-danger">Sil</button>
                <a asp-controller="Feature" asp-action="UpdateFeature" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="Feature" asp-action="CreateFeature" class="btn btn-outline-dark">Ön Cikanlara Ekle</a>



