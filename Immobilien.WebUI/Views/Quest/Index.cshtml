@model List<ResultQuestDto>
@{
    ViewData["Title"] = "Sorular Cevaplar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Soru</th>
        <th>Cevap</th>
        <th>Islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Question</td>
            <td>@item.Answer</td>
            <td>
                <button onclick="DeleteRecord('/Quest/DeleteQuest/@item.Id')" class="btn btn-outline-danger">Sil</button>
                <a asp-controller="Quest" asp-action="UpdateQuest" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="Quest" asp-action="CreateQuest" class="btn btn-outline-dark">Yeni Soru-Cevap Ekle</a>


