@model List<ResultDealDto>
@{
    int count = 0;
}
<div class="section best-deal">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="section-heading">
                    <h6>| Tekliflerimiz</h6>
                    <h2>Simdi En iyi Teklifi Bulun!</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="tabs-content">
                    <div class="row">
                        <div class="nav-wrapper ">
                            <ul class="nav nav-tabs" role="tablist">
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link@(count==1 ? " active":"")" id="@item.Type.Replace(" ","-")-tab" data-bs-toggle="tab" data-bs-target="#@item.Type.Replace(" ", "-")" type="button" role="tab" aria-controls="@item.Type.Replace(" ","-")" aria-selected="@(count==1 ? "true" : "false" )" tabindex="@(count==1 ? "" : "-1" )">@item.Type</button>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="tab-content" id="myTabContent">
                            @{
                                count = 0;
                            }
                            @foreach (var item in Model)
                            {
                                count++;
                                <div class="tab-pane fade@(count==1 ? " active ":" ")show" id="@item.Type.Replace(" ","-")" role="tabpanel" aria-labelledby="@item.Type.Replace(" ","-")-tab">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <div class="info-table">
                                                <ul>
                                                    <li>Kullanim Alani <span>@item.Square m2</span></li>
                                                    <li>Kat Bilgisi <span>@item.Floor</span></li>
                                                    <li>Oda Sayisi <span>@item.RoomCount</span></li>
                                                    <li>Park Alani<span>@(item.HasParkingArea ? "Var" : "Yok")</span></li>
                                                    <li>Ödeme Türü<span>@item.PaymentType</span></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <img src="@item.ImageUrl" alt="">
                                        </div>
                                        <div class="col-lg-3">
                                            <h4>@item.Title</h4>
                                            <p>
                                                @item.Description
                                            </p>
                                            <div class="icon-button">
                                                <a href="#contact"><i class="fa fa-calendar"></i> Ziyaret Ayarla</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

