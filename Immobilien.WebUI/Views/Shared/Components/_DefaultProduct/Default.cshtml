@model List<ResultProductDto>


<div class="properties section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4">
                <div class="section-heading text-center">
                    <h6>| Gayrimenkullerimiz</h6>
                    <h2>Size Begeneceginiz Mülkleri Sunuyoruz</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="item">
                        <a href="property-details.html"><img src="@item.ImageUrl" alt=""></a>
                        <span class="category">@item.Category</span>
                        <h6>@item.Price TL</h6>
                        <h4><a href="property-details.html">@item.Title</a></h4>
                        <ul>
                            <li>Oda Sayisi: <span>@item.BedRoomCount</span></li>
                            <li>Banyo Sayisi: <span>@item.BathRoomCount</span></li>
                            <li>Alani: <span>@item.Area m2</span></li>
                            <li>Kati: <span>@item.Floor</span></li>
                            <li>Park Yeri: <span>@item.ParkingCount Adet</span></li>
                        </ul>
                        <div class="main-button">
                            <a href="property-details.html">Ziyaret Planla</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>