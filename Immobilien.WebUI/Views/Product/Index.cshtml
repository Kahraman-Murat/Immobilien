@model List<ResultProductDto>
@{
    ViewData["Title"] = "Gayrimenkullerimiz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Resim Url</th>
        <th>Baslik</th>
        <th>Kategori</th>
        <th>Fiyat</th>
@*         <th>Yatak odasi Sayisi</th>
        <th>Banyo Sayisi</th>
        <th>m2</th>
        <th>Kat</th>
        <th>Park Yeri Sayisi</th> *@
        <th>Islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px"/></td>
            <td>@item.Title</td>
            <td>@item.Category</td>
            <td>@item.Price</td>
            @* <td>@item.BedRoomCount</td>
            <td>@item.BathRoomCount</td>
            <td>@item.Area</td>
            <td>@item.Floor</td>
            <td>@item.ParkingCount</td> *@
            <td>
                @* <a asp-controller="Deal" asp-action="DeleteDeal" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a> *@
                <button onclick="DeleteRecord('/Product/DeleteProduct/@item.Id')" class="btn btn-outline-danger">Sil</button>
                <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
                <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-outline-primary">Detaylar</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-dark">Yeni Gayrimenkul Ekle</a>

